# Deployment Target
platform :ios, '8.0'

# Ignore pods code warnings
inhibit_all_warnings!

# Add pods as frameworks so we could add obj-c and swift 3.0 pods
use_frameworks!

# Cartage support
install! 'cocoapods',
    :share_schemes_for_development_pods => true


target 'KeyboardAvoidingView_Example' do
    pod 'KeyboardAvoidingView', :path => '../'
    
    pod 'APExtensions'

    target 'KeyboardAvoidingView_Tests' do
        inherit! :search_paths

        pod 'Quick'
        pod 'Nimble'
        pod 'FBSnapshotTestCase'
        pod 'Nimble-Snapshots'
    end
end


post_install do |installer|
    # TODO: Remove pods when they converted to Swift 4
    # Your list of targets here.
    myTargets = ['Quick', 'Nimble', 'Nimble-Snapshots']
    
    installer.pods_project.targets.each do |target|
        if myTargets.include? target.name
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '3.2'
            end
        end
    end
    
    # Carthage support.
    # It puts `KeyboardAvoidingView.swift` into public headers so @IBInspectable won't be stripped out.
    additionHeader = installer.pods_project.development_pods['KeyboardAvoidingView/KeyboardAvoidingView.swift']
    headersBuildPhase = installer.pods_project.targets.select{ |x| x.name == 'KeyboardAvoidingView' }[0].headers_build_phase
    buildFile = headersBuildPhase.add_file_reference(additionHeader)
    buildFile.settings = { 'ATTRIBUTES' => ['Public']}
end
